<widget xmlns:rim="http://www.blackberry.com/ns/widgets"
        version="1.0.0.0"
        id="sopler"
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Sopler</name>
  <icon src="img/logo.png"/>
  <description>Sopler is a social and collaborative web application for making to-do lists. Create them, share them and collaborate with your friends to organize your everyday life.</description>
  <content src="index.html"/>
  <preference name="AutoHideSplashScreen" value="true"/>
  <preference name="ChildBrowser" value="disable"/>
  <preference name="DiskCache" value="disable"/>
  <preference name="HideKeyboardFormAccessoryBar" value="disable"/>
  <preference name="Orientation" value="portrait"/>
  <preference name="PopupBlocker" value="disable"/>
  <preference name="WebSecurity" value="enable"/>
  <access origin="*" subdomains="true"/>
  <author email="contact@bmb-studios.eu" href="http://www.bmb-studios.eu">George Bratsos</author>
  <license href="https://www.gnu.org/licenses/agpl.txt"/>
</widget>